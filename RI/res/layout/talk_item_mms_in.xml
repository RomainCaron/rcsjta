<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:paddingBottom="5dip"
                android:paddingEnd="12dip"
                android:paddingLeft="0dip"
                android:paddingRight="12dip"
                android:paddingStart="0dip"
                android:paddingTop="5dip"
    >

    <RelativeLayout
        android:id="@+id/conv_item_mms_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/talk_item_in"
        android:orientation="vertical"
        android:padding="5dip">

        <RelativeLayout
            android:id="@+id/xms_image_bloc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/xms_images_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            </LinearLayout>
            <TextView
                android:id="@+id/mms_filename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/xms_images_layout"
                android:layout_toRightOf="@id/xms_images_layout"
                android:textColor="@android:color/black"
                />

            <TextView
                android:id="@+id/mms_filesize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mms_filename"
                android:layout_toEndOf="@id/xms_images_layout"
                android:layout_toRightOf="@id/xms_images_layout"
                android:textColor="@android:color/darker_gray"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/xms_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/xms_image_bloc"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/xms_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xms_content"
            android:textColor="@android:color/darker_gray"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/xms_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/conv_item_mms_in"
        android:textColor="@android:color/white"
        />

</RelativeLayout>