<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="5dip"
    android:paddingEnd="0dip"
    android:paddingLeft="12dip"
    android:paddingRight="0dip"
    android:paddingStart="12dip"
    android:paddingTop="5dip">

    <TextView
        android:id="@+id/date_separator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:paddingBottom="5dip"
        />

    <RelativeLayout
        android:id="@+id/conv_item_mms_out"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/talk_item_out"
        android:orientation="vertical"
        android:padding="5dip"
        android:layout_below="@id/date_separator">

        <RelativeLayout
            android:id="@+id/xms_image_bloc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/mms_images_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/subject_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/xms_image_bloc"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subject_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subject_label"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/subject_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="subject"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>


        <TextView
            android:id="@+id/body_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subject_layout"
            android:text="body"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/timestamp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/body_text"
            android:text="timestamp"
            android:textColor="@android:color/darker_gray" />

    </RelativeLayout>

    <TextView
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/conv_item_mms_out"
        android:text="@string/label_state_unknown"
        android:textColor="@android:color/darker_gray" />

</RelativeLayout>