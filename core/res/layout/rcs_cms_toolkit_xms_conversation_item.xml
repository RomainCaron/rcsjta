<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:paddingLeft="0dip"
    android:paddingRight="12dip" >

	<RelativeLayout
        android:id="@+id/rcs_cms_toolkit_xms_conv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/msg_item_right"
        android:orientation="vertical" >
	
	    <TextView
	        android:id="@+id/rcs_cms_toolkit_xms_content"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"	        
	        android:textColor="@android:color/black" />
	
	    <TextView
	        android:id="@+id/rcs_cms_toolkit_xms_date"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/rcs_cms_toolkit_xms_content"
	        android:textColor="@android:color/black"/>

	</RelativeLayout>
	
</RelativeLayout>